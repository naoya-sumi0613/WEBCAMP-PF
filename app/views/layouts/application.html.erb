<!DOCTYPE html>
<html>
  <head>
    <title>Flip Flap</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="background-color: ivory;">

    <nav class="navbar navbar-expand-md" style="background-color: burlywood">
      <a class="navbar-brand" href="#" style="margin: 0 auto">Flip Flap</a>
      <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navber" aria-controls="Navber" aria-expanded="false" aria-label="ナビゲーションの切替">
        <span class="navbar-toggler-icon"></span>
      </button>


      <div class="collapse navbar-collapse" id="Navber">

        <% if user_signed_in? %>
        <ul class="navbar-nav mr-auto">
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "マイページ", user_path(current_user), class: "nav-link" %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">投稿一覧</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">投稿する</a>
          </li>
          <li class="nav-item">
            <%= link_to "ログアウト", destroy_user_session_path, method: :delete, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contacts/new">お問い合わせ</a>
          </li>
        </ul>

        <% else %>

        <ul class="navbar-nav mr-auto">
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">Topページ</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/homes/about">Flip Flapとは？</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/sign_in">ログイン</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/users/sign_up">新規登録</a>
          </li>
        </ul>

        <% end %>

      </div>
    </nav>
    <div class="container-fluid">
      <%= yield %>
    </div>
  </body>
</html>
