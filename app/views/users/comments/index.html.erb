<div class="row">
	<div class="col-12">
		<h3>コメントしたユーザー一覧</h3>
	</div>
</div>

<% @comments.each do |comment| %>
	<div class="row line" style="max-width: 768px">
		<div class="col-2">
			<%= attachment_image_tag comment.user, :image, :fill, 100, 100, fallback: 'no_image.jpg', size: '100x100', class: "radius" %>
		</div>
		<div class="col-10">
			<div class="row" style="margin-top: 2%;">
				<div class="col-12">
					<%= "#{comment.user.last_name}#{comment.user.first_name}" %>
				</div>
			</div>
			<div class="row">
				<div class="col-5">
					<%= comment.comment %>
				</div>
				<div class="col-5">
					<% if comment.user_id == current_user.id %>
						<%= link_to "コメントの削除", photo_comment_path(@photo, comment), class: "btn btn-sm btn-danger", method: :delete, "data-confirm" => "コメントを削除します。よろしいですか？"%>
					<% else %>
						フォローする
					<% end %>
				</div>
				<div class="col-2">

					<% if @photo.user_id == current_user.id && comment.user_id != current_user.id %>
						<% if comment.thanks == false %>
							<%= link_to photo_comment_path(@photo, comment, thanks: true), style: "color:black;", method: :put do %>
								<i class="far fa-smile-wink fa-2x"></i>
							<% end %>
						<% else %>
							<%= link_to photo_comment_path(@photo, comment, thanks: false), style: "color:yellow;", method: :put do %>
								<i class="fas fa-smile-wink fa-2x"></i>
							<% end %>
						<% end %>
					<% elsif comment.thanks == true %>
						<i class="fas fa-smile-wink fa-2x" style="color: yellow;"></i>
					<% end %>
				</div>
			</div>
		</div>
	</div>
<% end %>