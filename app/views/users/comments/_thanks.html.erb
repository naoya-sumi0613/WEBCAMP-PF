<% if photo.user_id == current_user.id && comment.user_id != current_user.id %>
            <% if comment.thanks == false %>
              <%= link_to photo_comment_path(photo, comment, thanks: true), style: "color:black;", method: :put, remote: true do %>
                <i class="far fa-smile-wink fa-2x"></i>
              <% end %>
            <% else %>
              <%= link_to photo_comment_path(photo, comment, thanks: false), style: "color:yellow;", method: :put, remote: true do %>
                <i class="fas fa-smile-wink fa-2x"></i>
              <% end %>
            <% end %>
          <% elsif comment.thanks == true %>
            <i class="fas fa-smile-wink fa-2x" style="color: yellow;"></i>
          <% end %>