		<%= "#{@user.last_name}#{@user.first_name}" %>　<%= "(#{@user.read_last_name}#{@user.read_first_name})" %></div>
	</div>

<div class="row">
	<div class="col-11" style="margin: 0 auto; height: auto;">
<%= @user.introduction %>
</div>
</div>

<div class="row">
	<div class="col-12">フォロー〇人　フォロワー〇人</div>
</div>
<div class="row">
	<div class="col-8"></div>
	<div class="col-2">
		<%= link_to edit_user_path(current_user), class: "btn btn-sm btn-outline-secondary" do %>
	<i class="fas fa-wrench"></i>
	<% end %>
</div>
	<div class="col-2">🔔</div>
</div>

</div>
</div>
