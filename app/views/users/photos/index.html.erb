<div class="row">
	<div class="col-md-12">
		<h3>投稿一覧</h3>
	</div>
</div>

<div class="row">
	<div class="col-md-4 col-lg-4 col-xl-3">

		<div class="row">
			<div class="col-12 photo">
				<%= attachment_image_tag @user, :image, :fill, 300, 200, fallback: 'no_image.jpg', size: '300x200' %>
			</div>
		</div>
		<div class="row">
			<div class="col-12">
				<%= "#{@user.last_name}#{@user.first_name}" %>　<%= "(#{@user.read_last_name}#{@user.read_first_name})" %>
			</div>
		</div>
		<div class="row">
			<div class="col-11" style="margin: 0 auto; height: auto;">
				<%= @user.introduction %>
			</div>
		</div>
		<div class="row">
			<div class="col-12">フォロー〇人　フォロワー〇人</div>
		</div>
		<div class="row">
			<div class="col-8"></div>
			<div class="col-2">
				<%= link_to edit_user_path(current_user), class: "btn btn-sm btn-outline-secondary" do %>
					<i class="fas fa-wrench"></i>
				<% end %>
			</div>
			<div class="col-2">🔔</div>
		</div>

	</div>

	<div class="col-md-8 col-lg-8 col-xl-9 photo">
		<% @photos.each do |photo| %>
			<% if photo.range == "全ユーザー" %>
				<%= render partial: 'users/photos/photo', locals: { photo: photo} %>
			<% elsif photo.range == "フォロワーのみ" %>
				<% if current_user.following?(photo.user) || photo.user.id == current_user.id %>
					<%= render partial: 'users/photos/photo', locals: { photo: photo} %>
				<% end %>
			<% else %>
				<% if photo.user.id == current_user.id %>
					<%= render partial: 'users/photos/photo', locals: { photo: photo} %>
				<% end %>
			<% end %>
		<% end %>
	</div>

</div>
