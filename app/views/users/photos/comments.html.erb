<div class="row">
  <div class="col-12">
    <h3>コメントしたユーザー一覧</h3>
  </div>
</div>

<% @comments.each do |comment| %>
  <div class="row line" style="max-width: 768px">
    <div class="col-2">
      <%= attachment_image_tag comment.user, :image, :fill, 100, 100, fallback: 'no_image.jpg', size: '100x100', class: "radius" %>
    </div>
    <div class="col-10">
      <div class="row" style="margin-top: 2%;">
        <div class="col-6">
          <%= "#{comment.user.last_name}#{comment.user.first_name}" %>
        </div>
        <div class="col-4">
          <% if comment.user_id != current_user.id %>
          <% @user = comment.user %>
            <div class="follows_buttons_<%= @user.id %>">
              <%= render partial: 'users/relationships/follow_button', locals: { user: @user} %>
            </div>
          <% else %>
            <%= link_to "コメント削除", photo_comment_path(@photo, comment), class: "btn btn-sm btn-danger bagde-pill", style: "width: 120px;", method: :delete, "data-confirm" => "コメントを削除します。よろしいですか？"%>
          <% end %>
        </div>
        <div class="col-2">
          <div class="comments_thanks_<%= comment.id %>">
              <%= render partial: 'users/comments/thanks', locals: { photo: @photo, comment: comment} %>
            </div>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <%= comment.comment %>
        </div>
      </div>
    </div>
  </div>
<% end %>