<div class="row">
	<div class="col-12">
		<h3>投稿詳細</h3>
	</div>
</div>

	<%= form_with model: @user, local: true do |f| %>
		<div class="row">
			<div class="col-sm-8 col-md-6 col-lg-4">
				<div class="row photo">
					<div class="col-2">
						<%= attachment_image_tag @user, :image, :fill, 100, 100, fallback: 'no_image.jpg', size: '100x100' %>
					</div>
					<div class="col-4">
						<%= "#{@user.last_name}#{@user.first_name}" %>
					</div>
					<div class="col-4">
						<%= f.select :range, [["全ユーザー","全ユーザー"],["フォロワーのみ","フォロワーのみ"],["自分のみ","自分のみ"]], {}, {class: "form-control", style: "width: 100%;"} %>
					</div>
					<div class="col-2">
						<%= f.submit '更新', class: "btn btn-primary", style: "width: 100%" %>
					</div>
				</div>

				<div class="row">
					<div class="col-12">

						<%= attachment_image_tag @photo, :image, :fill, 300, 200, fallback: 'no_image_photo.jpg', size: '300x200', id: 'img_prev' %>
					</div>
				</div>
				<div class="row">
					<div class="col-10 btn btn-primary btn-md" style="margin: 20px auto;">
						画像選択<%= f.attachment_field :image, style: 'display: none;', id:'photo_img' %>
					</div>
				</div>
			</label>
		</div>

		<div class="col-md-6 col-lg-4">
		<!-- ↑余裕があればpositionで設定 -->

			<div class="form-row">
				<div class="col-12">
					<%= f.text_area :word, placeholder: "一言(３０文字以内)", class: "form-control" %>
				</div>
			</div>
			<div class="form-row">
				<div class="col-12">
					<input type="text" readonly class="form-control-plaintext" id="staticEmail" value="タグスペース(未実装)">
				</div>
			</div>
			<div class="form-row">
				<div class="col-8">
					<%= f.select :range, [["全ユーザー","全ユーザー"],["フォロワーのみ","フォロワーのみ"],["自分のみ","自分のみ"]], {include_blank: "-- 公開範囲の選択 --"}, {class: "form-control", style: "width: 100%;"} %>
				</div>
				<div class="col-4">
					<%= f.submit '投稿する', class: "btn btn-success", style: "width: 100%" %>
				</div>
			</div>
		</div>
<% end %>
